#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,physical-layout = &wristball2_physical_layout;
    };
    
    wristball2_physical_layout: wristball2_physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        transform = <&default_transform>;
        kscan = <&kscan0>;

        keys  //                w   h    x    y   rot  rx   ry
            = <&key_physical_attrs 100 100  0    0    0    0    0>
            , <&key_physical_attrs 100 100  100  0    0    0    0>
            , <&key_physical_attrs 100 100  200  0    0    0    0>
            , <&key_physical_attrs 100 100  300  0    0    0    0>
            , <&key_physical_attrs 100 100  200  100  0    0    0>
            , <&key_physical_attrs 100 100  300  100  0    0    0>
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <3>;
        rows = <2>;               
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(1,0) RC(1,1) RC(1,2)
        >;
    };
    
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
            row-gpios
                = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
                ;
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <12>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&right_encoder>;  // left_encoderを削除
        triggers-per-rotation = <10>;
    };

    pmw3610_orientation: pmw3610_orientation {
        compatible = "zmk,behavior-sensor-rotate-var";
        label = "PMW3610_ORIENTATION";
        #binding-cells = <1>;
    };

    pmw3610_rot_0: pmw3610_rot_0 {
        compatible = "zmk,behavior-sensor-rotate";
        label = "PMW3610_ROT_0";
        #sensor-binding-cells = <0>;
        bindings = <&pmw3610_orientation 0>;
    };

    pmw3610_rot_90: pmw3610_rot_90 {
        compatible = "zmk,behavior-sensor-rotate";
        label = "PMW3610_ROT_90";
        #sensor-binding-cells = <0>;
        bindings = <&pmw3610_orientation 90>;
    };
};
